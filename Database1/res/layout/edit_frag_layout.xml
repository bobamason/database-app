<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scrollView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/edit_bg_color">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageButton
			android:layout_height="56dp"
			android:layout_width="56dp"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:id="@+id/delete_button"
			android:layout_marginTop="8dp"
			android:layout_marginRight="8dp"
			android:scaleType="centerInside"
			android:src="@drawable/button_delete"
			android:visibility="gone"
			android:background="#00000000"/>

		<ImageButton
			android:layout_height="56dp"
			android:layout_width="56dp"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="false"
			android:id="@+id/copy_button"
			android:layout_marginTop="8dp"
			android:layout_marginRight="8dp"
			android:scaleType="centerInside"
			android:src="@drawable/button_copy"
			android:visibility="gone"
			android:layout_toLeftOf="@id/delete_button"
			android:background="#00000000"/>

		<TextView
			android:id="@+id/addfraglayoutTextView1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:text="Name"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/text_color"
			android:layout_margin="8dp"
			android:layout_alignBottom="@id/delete_button"/>

		<EditText
			android:id="@+id/name_edittext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:layout_below="@id/addfraglayoutTextView1"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="8dp"
			android:ems="40"/>

		<TextView
			android:id="@+id/addfraglayoutTextView2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_below="@id/name_edittext"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="12dp"
			android:text="Category"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/text_color"/>

		<EditText
			android:id="@+id/category_edittext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:layout_below="@id/addfraglayoutTextView2"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="8dp"
			android:ems="40"/>

		<TextView
			android:id="@+id/addfraglayoutTextView3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_below="@id/category_edittext"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="12dp"
			android:text="Description"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/text_color"/>

		<EditText
			android:id="@+id/description_edittext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:layout_below="@id/addfraglayoutTextView3"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="8dp"
			android:ems="100"
			android:inputType="textMultiLine"
			android:minLines="4"/>

		<TextView
			android:id="@+id/addfraglayoutTextView4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_below="@id/description_edittext"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="12dp"
			android:text="Cost"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/text_color"/>

		<EditText
			android:id="@+id/cost_edittext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:layout_below="@id/addfraglayoutTextView4"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="8dp"
			android:ems="10"
			android:inputType="numberDecimal"/>

		<TextView
			android:id="@+id/addfraglayoutTextView5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_below="@id/cost_edittext"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="12dp"
			android:text="Estimated Value"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/text_color"/>

		<EditText
			android:id="@+id/value_edittext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:layout_below="@id/addfraglayoutTextView5"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="8dp"
			android:ems="10"
			android:inputType="numberDecimal"/>

		<Button
			android:id="@+id/done_add_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/value_edittext"
			android:layout_margin="8dp"
			android:background="@drawable/button"
			android:text="Done"
			android:textColor="@color/text_color"/>

	</RelativeLayout>

</ScrollView>

